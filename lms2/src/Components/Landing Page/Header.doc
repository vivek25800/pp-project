  }
  
/* From Uiverse.io by mrhyddenn */ 
button {
    background: #fff;
    border: none;
    padding: 6px 12px;
    display: inline-block;
    font-size: 18px;
    font-weight: 600;
    cursor: pointer;
    transform: skew(0deg);
    border: 2px solid #000000; /* black border */
    border-radius: 6px;
  }
  
  span {
    display: inline-block;
    transform: skew(0deg);
  }
  
  button::before {
    content: '';
    position: absolute;
    top: 0;
    bottom: 0;
    right: 100%;
    left: 0;
    background: rgb(20, 20, 20);
    opacity: 0;
    z-index: -1;
    transition: all 0.5s;
  }
  
  button:hover {
    color: #fff;
  }
  
  button:hover::before {
    left: 0;
    right: 0;
    opacity: 1;
  }

